<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="?android:selectableItemBackground"
    android:theme="@style/AppTheme.ListView"
    android:padding="@dimen/margin_small">

    <ImageView
        android:id="@+id/play_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        app:srcCompat="@drawable/ic_play_arrow" />

    <TextView
        android:id="@+id/trailer_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/play_image_view"
        android:layout_toEndOf="@+id/play_image_view"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/movie_detail_text_size" />
</RelativeLayout>